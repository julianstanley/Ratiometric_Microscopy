keywords = {Basolateral microdomains,ECFP,EYFP,Extracellular pH,FRET,MDCK cells,Ratiometric imaging,pH sensor},
number = {1},
pages = {233--242},
title = {{A genetically encoded ratiometric sensor to measure extracellular pH in microdomains bounded by basolateral membranes of epithelial cells}},
volume = {457},
